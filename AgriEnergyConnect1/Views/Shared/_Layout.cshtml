<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AgriEnergyConnect1</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&family=Lobster&display=swap">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin: 0; /* Remove default margin */
            background-color: yellow; /* Set background color to yellow */
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: 'Lobster', cursive;
            font-weight: bold;
        }

        .navbar-brand, .nav-link {
            font-family: 'Lobster', cursive;
            font-size: 1.2em;
            color: black; /* Ensure links are black */
        }

        .content-wrapper {
            flex: 1;
            display: flex;
            justify-content: center; /* Center the content horizontally */
            align-items: center; /* Center the content vertically */
            padding: 20px; /* Add padding for better visual appearance */
        }

        .main-content {
            background-color: #add8e6; /* Baby blue background color */
            padding: 20px; /* Add padding for better visual appearance */
            border-radius: 10px; /* Add rounded corners for better visual appearance */
        }

        footer {
            background-color: #006400;
            color: white;
            padding: 10px 0;
            width: 100%;
            position: relative;
            bottom: 0;
        }

            footer .container {
                font-family: 'Lobster', cursive;
                font-weight: bold;
                font-size: 1em;
            }

                footer .container span {
                    color: black;
                }

            footer a {
                color: white;
                text-decoration: none;
            }

                footer a:hover {
                    text-decoration: underline;
                }
    </style>
</head>
<body>
    <header>
        <!-- No need for yellow-section class as the entire body is yellow -->
        <!-- Navbar -->
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Brand/logo -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">AgriEnergyConnect1</a>
               
                

                <!-- Navbar toggler -->
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <!-- Navbar content -->
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <!-- Home link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <!-- Privacy link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>

                        <!-- Farmer link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Farmers" asp-action="Index">Farmers</a>
                        </li>

                        <!-- Product link -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Products" asp-action="All">Products</a>
                        </li>
                    </ul>

                    <!-- Login partial -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <!-- Image -->
    <div class="container text-center">
        <img src="~/css/IMAGES/AEC.jpg" alt="AgriEnergyConnect Logo" style="max-width: 100%; height: auto;">
    </div>


    <!-- Main content -->
    <div class="content-wrapper">
        <div class="main-content">
            @RenderBody()
        </div>
    </div>


    <!-- Footer -->
    <footer class="border-top footer text-muted text-center">
        <div class="container">
            <span>&copy; 2024 - AgriEnergyConnect1 - </span><a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
