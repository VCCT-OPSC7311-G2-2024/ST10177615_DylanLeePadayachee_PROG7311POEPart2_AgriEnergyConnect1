@model IEnumerable<AgriEnergyConnect1.Models.Farmer>

@{
    ViewData["Title"] = "Index";
}

<!-- Razor view generated with assistance from ChatGPT -->


<div class="container">
    <h2>List of Farmers</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var farmer in Model)
            {
                <tr>
                    <td>@farmer.Name</td>
                    <td>@farmer.Email</td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@farmer.FarmerId">Edit</a>
                        <a class="btn btn-info" asp-action="Details" asp-route-id="@farmer.FarmerId">Details</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@farmer.FarmerId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <a class="btn btn-success" asp-action="Create">Create New</a>
</div>
